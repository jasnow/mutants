= render partial: 'search_form'

- unless @tasks.blank?
  %table#task_list
    %thead
      %tr
        %th ID
        %th Name
        %th
    %tbody
      - @tasks.each do |t|
        %tr
          %td= t.id
          %td= t.name
          %td= link_to 'Delete', task_path(t), id: "task_delete_action_#{t.id}", name: 'delete-task', method: 'delete', data: {confirm: 'Are you sure that you want to delete this Task?'}