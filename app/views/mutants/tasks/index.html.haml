= render partial: 'search_form'
= render partial: 'task_actions'

- unless @tasks.blank?
  %table#task_list{class: 'table-index'}
    %thead
      %tr
        %th ID
        %th Name
        %th Mutants
        %th
    %tbody
      - @tasks.each do |t|
        %tr
          %td= t.id
          %td= link_to t.name, edit_task_path(t)
          %td
            Mutants
            %span#number_of_mutants= t.mutants.count
          %td= link_to 'Delete', task_path(t), id: "task_delete_action_#{t.id}", name: 'delete-task', method: 'delete', data: {confirm: 'Are you sure that you want to delete this Task?'}